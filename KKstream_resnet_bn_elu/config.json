{
    "name": "KKstream_resnet_bn_elu_newft",
    "n_gpu": 1,
    
    "arch": {
        "type": "KKstreamModelResNet",
        "args": {}
    },
    "data_loader": {
        "type": "KKstreamDataLoader",
        "args":{
            "data_dir": "../kkbox/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "roc_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_roc_metric",
        "early_stop": 10,
        
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
